{
    "namespace": "andexdb_general_long_form",
    "panel": {
        "type": "panel",
        "size": ["100%", "100%"],
        "anchor_from": "center",
        "anchor_to": "center",
        "controls": [
            {
                "fullscreen_panel": {
                    "type": "panel",
                    "size": ["100%", "100%"],
                    "anchor_from": "center",
                    "anchor_to": "center",
                    "bindings": [
                        {
                            "binding_type": "global",
                            "binding_condition": "none",
                            "binding_name": "#title_text",
                            "binding_name_override": "#title_text"
                        },
                        {
                            "source_property_name": "(not ((('a' + #title_text) - $andexdb_fullscreen_long_form_code) = ('a' + #title_text)))", // ( and ((('a' + #title_text) - $andexdb_fullscreen_status_bar_long_form_code) = ('a' + #title_text)))
                            "binding_type": "view",
                            "target_property_name": "#visible"
                        }
                    ]
                }
            },
            {
                "medium_panel": {
                    "type": "panel",
                    "size": [345, 230],
                    "anchor_from": "center",
                    "anchor_to": "center",
                    "bindings": [
                        {
                            "binding_type": "global",
                            "binding_condition": "none",
                            "binding_name": "#title_text",
                            "binding_name_override": "#title_text"
                        },
                        {
                            "source_property_name": "(not ((('a' + #title_text) - $andexdb_medium_long_form_code - $andexdb_grid_menu_form_code) = ('a' + #title_text)))", // ( and ((('a' + #title_text) - $andexdb_medium_status_bar_long_form_code) = ('a' + #title_text)))
                            "binding_type": "view",
                            "target_property_name": "#visible"
                        }
                    ]
                }
            },
            {
                "wide_panel": {
                    "type": "panel",
                    "size": [440, 200],
                    "anchor_from": "center",
                    "anchor_to": "center",
                    "bindings": [
                        {
                            "binding_type": "global",
                            "binding_condition": "none",
                            "binding_name": "#title_text",
                            "binding_name_override": "#title_text"
                        },
                        {
                            "source_property_name": "(not ((('a' + #title_text) - $andexdb_wide_long_form_code) = ('a' + #title_text)))", // ( and ((('a' + #title_text) - $andexdb_wide_status_bar_long_form_code) = ('a' + #title_text)))
                            "binding_type": "view",
                            "target_property_name": "#visible"
                        }
                    ]
                }
            },
            {
                "general_panel": {
                    "type": "panel",
                    "size": [220, 200],
                    "anchor_from": "center",
                    "anchor_to": "center",
                    "bindings": [
                        {
                            "binding_type": "global",
                            "binding_condition": "none",
                            "binding_name": "#title_text",
                            "binding_name_override": "#title_text"
                        },
                        {
                            "source_property_name": "(not ((('a' + #title_text) - $andexdb_general_form_code) = ('a' + #title_text)))", // ( and ((('a' + #title_text) - $andexdb_general_status_bar_form_code) = ('a' + #title_text)))
                            "binding_type": "view",
                            "target_property_name": "#visible"
                        }
                    ]
                }
            },
            {
                "long_form@andexdb_general_long_form.long_form": {
                    "$form_size": ["100%sm", "100%sm"]
                }
            }
        ]
    },
    "long_form@andexdb_common.main_panel_no_buttons_plus": {
        "$title_panel": "andexdb_common.standard_title_label",
        "$title_size": ["100% - 14px", 10],
        "size": "$form_size",
        "$form_size|default": [220, 200],
        "$show_status_bar|default": true,
        "variables": [
            {
                "requires": "$show_status_bar",
                "$form_size|default": [220, 215]
            }
        ],
        "$text_name": "#title_text",
        "$title_text_binding_type": "none",
        "$child_control": "andexdb_general_long_form.long_form_panel",
        "layer": 2
    },
    "long_form_panel": {
        "type": "stack_panel",
        "size": ["100%", "100%"],
        "orientation": "vertical",
        "layer": 1,
        "anchor_from": "top_left",
        "anchor_to": "top_left",
        "controls": [
            {
                "scrolling_panel@common.scrolling_panel": {
                    "anchor_to": "top_left",
                    "anchor_from": "top_left",
                    "$show_background": false,
                    "size": ["100%", "100%"],
                    "$scrolling_content": "andexdb_general_long_form.long_form_scrolling_content",
                    "$scroll_size": [5, "100% - 4px"],
                    "$scrolling_pane_size": ["100% - 4px", "100% - 2px"],
                    "$scrolling_pane_offset": [2, 0],
                    "$scroll_bar_right_padding_size": [0, 0],
                    "bindings": [
                        {
                            "binding_type": "global",
                            "binding_condition": "none",
                            "binding_name": "#title_text",
                            "binding_name_override": "#title_text"
                        },
                        {
                            "source_property_name": "((('a' + #title_text) - $andexdb_grid_menu_form_code) = ('a' + #title_text))",
                            "binding_type": "view",
                            "target_property_name": "#visible"
                        }
                    ]
                }
            },
            {
                "grid_long_form@common.scrolling_panel": {
                    "$scroll_bar_contained": false,
                    "offset": "$offset",
                    // "$offset|default": [3, -2],
                    "$offset|default": [0, -5],
                    "size": [325, 167 /* 160 */],
                    "$scrolling_content": "andexdb_grid_menu.grid_scroll_panel",
                    "$show_background": false,
                    "$scrolling_pane_size": ["100%", "115%"],
                    "$scrolling_pane_offset": [2, 3],/* 
                    "anchor_from": "center",
                    "anchor_to": "center", */
                    "variables": [
                        {
                            "requires": "$show_status_bar",
                            "$texture": "textures/ui/dialog_background_hollow_3_status_bar"/* ,
                            "$offset|default": [0, -12] */
                        }
                    ],
                    "$bindings": [
                        {
                            "binding_name": "#form_button_length",
                            "binding_name_override": "#collection_length"
                        }
                    ],
                    "bindings": [
                        {
                            "binding_type": "global",
                            "binding_condition": "none",
                            "binding_name": "#title_text",
                            "binding_name_override": "#title_text"
                        },
                        {
                            "source_property_name": "(not ((('a' + #title_text) - $andexdb_grid_menu_form_code) = ('a' + #title_text)))", // ( and ((('a' + #title_text) - $andexdb_grid_menu_status_bar_form_code) = ('a' + #title_text)))
                            "binding_type": "view",
                            "target_property_name": "#visible"
                        }
                    ]
                }
            }
        ]
    },

    "long_form_scrolling_content": {
        "type": "stack_panel",
        "size": ["100% - 4px", "100%c"],
        "orientation": "vertical",
        "anchor_from": "top_left",
        "anchor_to": "top_left",

        "controls": [
            {
                "label_offset_panel": {
                    "type": "panel",
                    "size": ["100%", "100%c"],
                    "controls": [
                        {
                            "main_label": {
                                "type": "label",
                                "offset": [2, 2],
                                "color": "$main_header_text_color",
                                "size": ["100%", "default"],
                                "anchor_from": "top_left",
                                "anchor_to": "top_left",
                                "text": "#form_text"
                            }
                        }
                    ]
                }
            },
            {
                "padding": {
                    "type": "panel",
                    "size": ["100%", 4]
                }
            },
            {
                "wrapping_panel": {
                    "type": "panel",
                    "size": ["100%", "100%c"],
                    "controls": [
                        {
                            "long_form_dynamic_buttons_panel@andexdb_common.long_form_dynamic_buttons_panel": {}
                        }
                    ]
                }
            }
        ]
    }
}
