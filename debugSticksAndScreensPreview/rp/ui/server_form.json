    "custom_form": {
      "modifications": [
          // This goes before all other bindings because it is a placeholder to allow the bindings in the other modification to work if no other resource packs are adding #visibile modifying bindings.
          {
              "array_name": "bindings",
              "operation": "insert_front",
              "value": [
                  {
                      "binding_name": "#title_text"
                  },
                  {
                      "binding_type": "view",
                      "source_control_name": "custom_form",
                      "source_property_name": "(('a' + #title_text) = ('a' + #title_text))",
                      "target_property_name": "#visible"
                  }
              ]
          },
          {
              "array_name": "bindings",
              "operation": "insert_back",
              "value": [
                  // Use a different method to make it invisible so that it will still be compatible with other packs that modify the script form UIs.
                  // This one checks that it does not contain the code for one of the special forms from this resource pack, and then if it does not contain one of those codes, it checks if it has already been set to invisible by another resource pack.
                  {
                      "binding_type": "view",
                      "source_control_name": "custom_form",
                      "source_property_name": "(((('a' + #title_text) - $andexdb_general_custom_form_code - $andexdb_wide_custom_form_code - $andexdb_medium_custom_form_code - $andexdb_fullscreen_custom_form_code) = ('a' + #title_text)) and #visible)",
                      "target_property_name": "#visible"
                  }
              ]
          }
      ]
    },
