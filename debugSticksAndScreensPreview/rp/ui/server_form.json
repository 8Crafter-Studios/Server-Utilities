  "long_form_panel_grid_view" : {
    "type": "stack_panel",
    "size": ["100%", "100%"],
    "orientation": "vertical",
    "layer": 1,
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "controls": [
      
      {
        "scrolling_panel@common.scrolling_panel": {
          "anchor_to": "top_left",
          "anchor_from": "top_left",
          "$show_background": false,
          "size": [ "100%", "100%" ],
          "$scrolling_content": "server_form.long_form_scrolling_content_grid_view",
          "$scroll_size": [ 5, "100% - 4px" ],
          "$scrolling_pane_size": [ "100% - 4px", "100% - 2px" ],
          "$scrolling_pane_offset": [ 2, 0 ],
          "$scroll_bar_right_padding_size": [ 0, 0 ]
        }
      }
    ]
  },

  "long_form_scrolling_content_grid_view": {
    "type": "stack_panel",
    "size": [ "100% - 4px", "100%c" ],
    "orientation": "vertical",
    "anchor_from": "top_left",
    "anchor_to": "top_left",

    "controls": [
      {
        "label_offset_panel": {
          "type": "panel",
          "size": ["100%", "100%c"],
          "controls": [
            {
              "main_label": {
                "type": "label",
                "offset": [2,2],
                "color": "$main_header_text_color",
                "size": ["100%", "default"],
                "anchor_from": "top_left",
                "anchor_to": "top_left",
                "text": "#form_text"
              }
            }
          ]
        }
      },
      {
        "padding": {
          "type": "panel",
          "size": [ "100%", 4 ]
        }
      },
      {
        "wrapping_panel": {
          "type": "panel",
          "size": [ "100%", "100%c" ],
          "controls": [
            {
              "long_form_dynamic_buttons_panel@server_form.long_form_dynamic_buttons_panel_grid_view": {}
            }
          ]
        }
      }
    ]
  },
  "long_form_dynamic_buttons_panel_grid_view": {
    "type": "grid",
    "size": ["100% - 4px", "100%c"],
    "offset": [2,0],
    "orientation": "vertical",
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "grid_fill_direction": "horizontal",

    "factory":{
      "name": "buttons",
      "control_name": "server_form.dynamic_button_grid_view"
    },

    "collection_name": "form_buttons",
    "bindings": [
      {
        "binding_name": "#form_button_length",
        "binding_name_override": "#collection_length"
      }
    ]
  },

  "dynamic_button": {
    "type": "stack_panel",
    "size": ["100%", 32],
    "orientation": "horizontal",
    "controls":[
      {
        "panel_name": {
          "type": "panel",
          "size": [34, "100%c"],
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "image",
              "resolve_sibling_scope": true,
              "source_property_name": "(not (#texture = ''))",
              "target_property_name": "#visible"
            }
          ],

          "controls": [
            {
              "image": {
                "type": "image",
                "layer": 2,
                "size": [32, 32],
                "offset": [-2, 0],
                "bindings":[
                  {
                    "binding_name": "#form_button_texture",
                    "binding_name_override": "#texture",
                    "binding_type": "collection",
                    "binding_collection_name": "form_buttons"
                  },
                  {
                    "binding_name": "#form_button_texture_file_system",
                    "binding_name_override": "#texture_file_system",
                    "binding_type": "collection",
                    "binding_collection_name": "form_buttons"
                  },
                  {
                    "binding_type": "view",
                    "source_property_name": "(not (((#texture = '') or (#texture = 'loading')) or (not ((#texture-'itemaux:') = #texture))))",
                    "target_property_name": "#visible"
                  }
                ]
              }
            },
            {
              "progress@progress.progress_loading_bars": {
                "size": [30, 4],
                "offset": [-2, 16],
                "bindings":[
                  {
                    "binding_type": "view",
                    "source_control_name": "image",
                    "resolve_sibling_scope": true,
                    "source_property_name": "(#texture = 'loading')",
                    "target_property_name": "#visible"
                  }
                ]
              }
            },
            {
              "item_renderer": {
              	"type": "custom",
              	"renderer": "inventory_item_renderer",
                	"size": [32, 32],
                	"offset": [-2, 0],
                	"property_bag": {
				"#item_id_aux": "(#texture-'itemaux:')"
			},
                	"bindings":[
                  		{
                    			"binding_type": "view",
                    			"source_control_name": "image",
                    			"resolve_sibling_scope": true,
                    			"source_property_name": "(not ((#texture-'itemaux:') = #texture))",
                    			"target_property_name": "#visible"
                  		}
                	]
              			}
            			}
          		]
        	}
      },
      {
        "form_button@common_buttons.light_text_button": {
          "$pressed_button_name": "button.form_button_click",
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "size": [ "fill", 32 ],
          "$button_text": "#form_button_text",
          "$button_text_binding_type": "collection",
          "$button_text_grid_collection_name": "form_buttons",
          "$button_text_max_size": [ "100%", 20 ],
          "bindings": [
            {
              "binding_type": "collection_details",
              "binding_collection_name": "form_buttons"
            }
          ]
        }
      }
    ]
  },*//*

  "dynamic_button_grid_view": {
    "type": "panel",
    "size": [70, 70],*//*
    "orientation": "horizontal",*//*
    "controls":[
      {
        "panel_name": {
          "type": "panel",
          "size": ["64", "64"],
          "anchor_from": "center",
          "anchor_to": "center",
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "image",
              "resolve_sibling_scope": true,
              "source_property_name": "(not (#texture = ''))",
              "target_property_name": "#visible"
            }
          ],

          "controls": [
            {
              "image": {
                "type": "image",
                "layer": 50,
                "size": [64, 64],
                "offset": [0, 0],
                "bindings":[
                  {
                    "binding_name": "#form_button_texture",
                    "binding_name_override": "#texture",
                    "binding_type": "collection",
                    "binding_collection_name": "form_buttons"
                  },
                  {
                    "binding_name": "#form_button_texture_file_system",
                    "binding_name_override": "#texture_file_system",
                    "binding_type": "collection",
                    "binding_collection_name": "form_buttons"
                  },
                  {
                    "binding_type": "view",
                    "source_property_name": "(not ((#texture = '') or (#texture = 'loading')))",
                    "target_property_name": "#visible"
                  }
                ]
              }
            },
            {
              "progress@progress.progress_loading_bars": {
                "size": [60, 8],
                "offset": [-2, 28],
                "bindings":[
                  {
                    "binding_type": "view",
                    "source_control_name": "image",
                    "resolve_sibling_scope": true,
                    "source_property_name": "(#texture = 'loading')",
                    "target_property_name": "#visible"
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "form_button@common_buttons.light_text_button": {
          "$pressed_button_name": "button.form_button_click",
          "anchor_from": "center",
          "anchor_to": "center",
          "size": [ "fill", "fill" ],
          "$button_text": "#form_button_text",
          "$button_text_binding_type": "collection",
          "$button_text_grid_collection_name": "form_buttons",
          "$button_text_max_size": [ "100%", 20 ],
          "$text_alignment": "bottom_middle",
          "bindings": [
            {
              "binding_type": "collection_details",
              "binding_collection_name": "form_buttons"
            }
          ]
        }
      }
    ]
  },
  "form_fitting_main_panel_no_buttons": {
  	"type": "panel",
  	"size": [ "100%", "100%c" ],
  	"anchor_from": "center",
  	"anchor_to": "center",
  	"$text_name|default": "",
  	"$show_close_button|default": true,
  	"$use_compact_close_button|default": false,
  	"$close_button_offset|default": [ 0, 0 ],
  	"$custom_background|default": "common_dialogs.dialog_background_hollow_3",
  	"controls": [
  		{ "common_panel@common_dialogs.common_panel": { "$dialog_background": "$custom_background" } }
  	]
  },*/

  "dynamic_button": {
      "modifications": [
          {
              "array_name": "controls",
              "operation": "replace",
              "where": {
                "form_button@common_buttons.light_text_button": {
                    "$pressed_button_name": "button.form_button_click",
                    "anchor_from": "top_left",
                    "anchor_to": "top_left",
                    "size": [ "fill", 32 ],
                    "$button_text": "#form_button_text",
                    "$button_text_binding_type": "collection",
                    "$button_text_grid_collection_name": "form_buttons",
                    "$button_text_max_size": [ "100%", 20 ],
                    "bindings": [
                        {
                            "binding_type": "collection_details",
                            "binding_collection_name": "form_buttons"
                        }
                    ]
                }
            },
              "value": {
                  "form_button@common_buttons.light_text_button_b": {
                      "$pressed_button_name": "button.form_button_click",
                      "anchor_from": "top_left",
                      "anchor_to": "top_left",
                      "size": [ "fill", 32 ],
                      "$button_text": "#form_button_text",
                      "$button_text_binding_type": "collection",
                      "$button_text_grid_collection_name": "form_buttons",
                      "$button_text_max_size": [ "100%", 20 ],
                      "bindings": [
                          {
                              "binding_type": "collection_details",
                              "binding_collection_name": "form_buttons"
                          }
                      ]
                  }
              }
          }
      ]
  },

  "custom_input@settings_common.option_text_edit_b": {
    "$option_label": "#custom_text",
    "$option_place_holder_text": "#custom_placeholder_text",
    "$text_edit_box_placeholder_content_binding_name": "$option_place_holder_text",
    "$text_edit_box_placeholder_content_binding_type": "collection",
    "$text_edit_box_grid_collection_name": "custom_form",

    "$max_text_edit_length": 100000000,/*
    "$multilinename": "multiline", 
    "enabled_newline": "not ((#custom_placeholder_text - $multilinename) = #custom_placeholder_text)", */

    "$text_edit_box_content_binding_type": "collection",
    "$text_edit_box_content_binding_name": "#custom_input_text",

    "$option_binding_name": "#custom_input_text",
    "$text_box_enabled_binding_name": "#custom_input_enabled",
    "$text_box_name": "custom_input",
    "$label_bindings": [
      {
        "binding_name": "#custom_text",
        "binding_type": "collection",
        "binding_collection_name": "custom_form"
      }
    ]
  }
