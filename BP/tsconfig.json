{
    "compilerOptions": {
      "module": "ES2020",
      "target": "ES2021",
      "moduleResolution": "Node",
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./src",
      "rootDir": "./src",
      "outDir": "./scripts",
      "paths": {
        "@minecraft/math.js": ["../node_modules/@minecraft/math"]
      },
      "allowJs": true,/*
      "declaration": true,
      "declarationMap": true,*/
      "verbatimModuleSyntax": true/*, 
      "resolveJsonModule": true*/,
      "sourceMap": true,
      "noFallthroughCasesInSwitch": true,
      "strictBindCallApply": true
    },
    "exclude": [ "node_modules" ],
    "include": [ "src" ]
  }
